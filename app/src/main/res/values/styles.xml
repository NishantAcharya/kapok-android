<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAltText">@color/colorBlack</item>
        <item name="colorText">@color/colorWhite</item>
        <item name="colorHint">@color/colorGrey</item>
        <item name="colorSpinner">@color/colorWhite</item>
        <item name="colorSeed">@color/seedBlue</item>
    </style>

    <!-- Dark theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorAltText">@color/colorWhite</item>
        <item name="colorText">@color/colorBlack</item>
        <item name="colorHint">@color/colorGrey</item>
        <item name="colorSpinner">@color/colorGrey</item>
        <item name="colorSeed">@color/twitterDark</item>
    </style>

    <!--Dark theme alert box-->
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:colorAccent">@color/colorGrey</item>
    </style>


    <!-- Base application theme. -->
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
