<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorText"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".LogInActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="?attr/colorAltText"
        android:text="Create Your Log"
        android:textSize = "20dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/location_txt"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:backgroundTint="?attr/colorHint"
        android:textColor="?attr/colorAltText"
        android:hint="Location"
        android:textColorHint="?attr/colorHint"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/category_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:background = "?attr/colorSpinner"
        android:entries="@array/Categories"
        android:hint="Category"
        android:inputType="textEmailAddress"
        android:prompt="@string/category_name" />

    <EditText
        android:id="@+id/notes_txt"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:textColorHint="?attr/colorHint"
        android:textColor="?attr/colorAltText"
        android:hint="Notes"
        android:backgroundTint="?attr/colorHint"
        android:inputType="textMultiLine" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="@+id/notes_txt"
        android:layout_alignParentBottom="true"
        android:textColor="?attr/colorAltText"
        android:text="*Make sure to not include any protected health information(PHI) in this section"
        android:textAlignment="center"
        android:textSize="10dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorSpinner"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Log Priority"
        android:textColor="?attr/colorAltText"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/create_log"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="?attr/colorAccent"
        android:text="Create Log"
        android:textColor="?attr/colorText" />

</LinearLayout>
</ScrollView>