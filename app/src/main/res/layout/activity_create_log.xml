<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".LogInActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Tell us as much as you can about what's happening at this location."
        android:textAlignment="center" />

    <EditText
        android:id="@+id/location_txt"
        android:layout_width="352dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/category_txt"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:entries="@array/Categories"
        android:hint="Category"
        android:inputType="textEmailAddress"
        android:prompt="@string/category_name" />

    <EditText
        android:id="@+id/notes_txt"
        android:layout_gravity="center"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textMultiLine" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="@+id/notes_txt"
        android:layout_alignParentBottom="true"
        android:text="*Make sure to not include any protected health information(PHI) in this section"
        android:textAlignment="center"
        android:textSize="10dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Log Priority"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/create_log"
        android:layout_gravity="center"
        android:layout_width="347dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:text="Create Log"
        android:textColor="@android:color/background_light" />

</LinearLayout>