<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="50dp"
        android:text="App Settings"
        android:textSize="18dp"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
            android:layout_width="240dp"
            android:layout_height="25dp"
            android:text="Allow Notifications"
            android:textColor="?attr/colorAltText"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="240dp"
                android:layout_height="20dp"
                android:text="Do You want to get notifications from the team?"
                android:textColor="?attr/colorAltText"
                android:textSize="10dp"
                android:textStyle="normal"></TextView>


        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notifcation_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textOff="OFF"
            android:textOn="ON" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="25dp"
            android:text="Change Gravity"
            android:textColor="?attr/colorAltText"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:text="Keep the navigation bar open?"
                android:textColor="?attr/colorAltText"
                android:textSize="10dp"
                android:textStyle="normal"></TextView>
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/drawer_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textOff="OFF"
            android:textOn="ON" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:text="Dark Mode"
                android:textColor="?attr/colorAltText"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:text="Apply a darker theme"
                android:textColor="?attr/colorAltText"
                android:textSize="10dp"
                android:textStyle="normal"></TextView>
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/theme_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textOff="OFF"
            android:textOn="ON" />

    </LinearLayout>

    <TextView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Change Language"
        android:layout_marginLeft="32dp"
        android:textColor="?attr/colorAltText"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:text="Account Settings"
        android:textSize="18dp"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:text="Active or Inactive"
                android:textColor="?attr/colorAltText"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="240dp"
                android:layout_height="25dp"
                android:text="Set your communication preference"
                android:textColor="?attr/colorAltText"
                android:textSize="10dp"
                android:textStyle="normal"></TextView>
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/status_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textOff="OFF"
            android:textOn="ON" />

    </LinearLayout>




</LinearLayout>
</ScrollView>