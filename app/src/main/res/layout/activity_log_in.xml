<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogInActivity"
    android:background="?attr/colorText">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
         />

    <EditText
        android:id="@+id/email_text_field"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_text_field"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColorHint="?attr/colorHint"
        android:textColor = "?attr/colorAltText"
        android:hint="Email"
        android:backgroundTint="?attr/colorHint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_text_field"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:textColorHint="?attr/colorHint"
        android:textColor = "?attr/colorAltText"
        android:hint="Password"
        android:backgroundTint="?attr/colorHint"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/password_eye_login"
        android:layout_width="47dp"
        android:layout_height="34dp"
        android:layout_below="@+id/email_text_field"
        android:layout_alignParentRight="true"
        android:background="@color/colorWhite"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_font_awesome_5_solid_eye_slash"
        tools:visibility="visible" />


    <Button
        android:id="@+id/log_in_btn"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:backgroundTint="?attr/colorAccent"
        android:text="Log In"
        android:textColor="?attr/colorText" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="?attr/colorAccent"
        android:text="Forgot Password"
        android:textColor="?attr/colorText" />


</RelativeLayout>