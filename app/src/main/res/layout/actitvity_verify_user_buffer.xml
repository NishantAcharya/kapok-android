<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:background="?attr/colorSeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/login_btn"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="420dp"
            android:background="@drawable/rounded_button"
            android:text="Proceed with profile setup"
            android:textColor="?attr/colorText"
             />


        <Button
            android:id="@+id/resend_btn"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop = "360dp"
            android:background="@drawable/rounded_button_white"
            android:text="Resend Confirmation link"
            android:textColor="?attr/colorAccent"
             />



        <!-- Reminder to change logo-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:text="We have sent you an email with verification instructions. Click on the log-in button after verifying your email.  "
            android:textAlignment="center"
            android:textColor="?attr/colorAltText" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            app:srcCompat="@drawable/ic_launcher" />

    </RelativeLayout>
</ScrollView>