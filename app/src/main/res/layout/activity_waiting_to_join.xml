<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout

        android:layout_width="match_parent"

        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hang On Tight..."
            android:textColor="#FFF"
            android:backgroundTint="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="106dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="You have sent a request to:"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:backgroundTint="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="180dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="106dp" />

        <TextView
            android:id="@+id/teamText"
            android:layout_centerHorizontal="true"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:backgroundTint="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginTop="200dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="106dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            app:srcCompat="@drawable/wait"/>

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="We'll let you know once your request has been approved"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="510dp"/>

        <Button
            android:id="@+id/cancel_request"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="580dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:text="Cancel Request" />


    </RelativeLayout>
</ScrollView>