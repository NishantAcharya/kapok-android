<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="?attr/colorSeed">

<ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_launcher"
        tools:visibility="visible" />


    <EditText
        android:id="@+id/email_text_field"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColor="?attr/colorAltText"
        android:textColorHint="?attr/colorHint"
        android:hint="Email"
        android:backgroundTint="?attr/colorHint"
        android:inputType="textEmailAddress" />



    <EditText
        android:id="@+id/password_text_field"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColor="?attr/colorAltText"
        android:textColorHint="?attr/colorHint"
        android:hint="Password"
        android:backgroundTint="?attr/colorHint"
        android:inputType="textPassword" />


    <ImageButton
        android:id="@+id/password_eye"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="250dp"
        android:layout_marginRight="2dp"
        android:background="?attr/colorSeed"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_font_awesome_5_solid_eye_slash"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="339dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:backgroundTint="@color/colorGrey"
        android:progress="0" />


    <TextView
        android:id="@+id/password_strength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textAlignment="center"
        android:textColor="?attr/colorAltText"
        android:text="Weak" />

    <EditText
        android:id="@+id/confirm_pass_text_field"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:backgroundTint="?attr/colorHint"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="?attr/colorAltText"
        android:textColorHint="?attr/colorHint" />


    <Button
        android:id="@+id/register_btn"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:background="@drawable/rounded_button"
        android:text="Register"
        android:textColor="?attr/colorText"

        />
    <TextView
        android:id="@+id/asterisk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:textAlignment="center"
        android:textColor="?attr/colorAltText"
        android:text="*Medium strength is required for password" />


</RelativeLayout>
</ScrollView>


