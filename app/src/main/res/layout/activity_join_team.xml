<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorText">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="You can get a team code from a site leader."
        android:layout_marginTop="150dp"
        android:textColor="?attr/colorAltText"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="106dp" />

    <EditText
        android:id="@+id/teamCode"
        android:layout_centerHorizontal="true"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textColorHint="?attr/colorHint"
        android:textColor = "?attr/colorAltText"
        android:hint="Team Code"
        android:backgroundTint="?attr/colorHint"
        android:maxLength="7"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        android:ems="10"
        tools:layout_editor_absoluteY="106dp" />



    <Button
        android:id="@+id/joinRequest"
        android:layout_centerHorizontal="true"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Request to Join"
        android:textColor="?attr/colorText"
        android:backgroundTint="?attr/colorAccent"
        android:textAlignment="center"
        android:layout_marginTop="480dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="106dp" />


</RelativeLayout>
</ScrollView>