<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <!--Make the image longer-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorText">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="420dp"
            android:backgroundTint="?attr/colorAccent"
            android:text="Proceed with profile setup"
            android:textColor="?attr/colorText" />


        <Button
            android:id="@+id/resend_btn"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop = "480dp"
            android:backgroundTint="?attr/colorText"
            android:text="Resend Confirmation link"
            android:textColor="?attr/colorAccent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="191dp"
            android:textColor="?attr/colorAltText"
            android:text="We have sent you an email with verification instructions. Click on the log-in button after verifying your email.  "
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat= "@drawable/ic_launcher" />

    </RelativeLayout>
</ScrollView>